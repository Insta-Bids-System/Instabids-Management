# Supabase Configuration (Required)
SUPABASE_URL=https://your-supabase-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here_never_commit

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-generate-a-secure-one
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# SmartScope / OpenAI
OPENAI_API_KEY=
SMARTSCOPE_MODEL=gpt-4.1-mini
SMARTSCOPE_MAX_OUTPUT_TOKENS=1200
SMARTSCOPE_TEMPERATURE=0.2
SMARTSCOPE_CONFIDENCE_THRESHOLD=0.75
